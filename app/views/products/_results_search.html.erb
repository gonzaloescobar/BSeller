<table class="table">
 <thead>
  <tr>
   <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
  </tr>
  <tr>
   <th>Nombre</th>
   <th>Precio</th>
   <th>Fecha de Alta</th>
   <th colspan="2"></th>
  </tr>
 </thead>

 <tbody>
  <div id="products">
   <% @products.each do |product| %>
    <tr>
     <td><%= product.name %></td>
     <td><%= product.sale_price %></td>
     <td><%= product.created_at.strftime("%d/%m/%Y") %></td>
     <td>
      <%= button_to edit_product_path(product), {method: :get, class: "btn btn-info"} do %>
       <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
      <% end %>
     </td>
     <td>
      <%= button_to product, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
       <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
      <% end %>
     </td>
    </tr>
   <% end %>
  </div>
 </tbody>
</table>